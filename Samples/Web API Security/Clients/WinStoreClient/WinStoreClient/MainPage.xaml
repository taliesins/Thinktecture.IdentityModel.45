<Page
    x:Class="WinStoreClient.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinStoreClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Button Content="Sign In" HorizontalAlignment="Left" Margin="26,10,0,0" VerticalAlignment="Top" Click="SignIn_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="26,104,0,0" TextWrapping="Wrap" Text="Access Token: " VerticalAlignment="Top"/>
        <TextBlock x:Name="_txtToken" HorizontalAlignment="Left" Margin="126,104,0,0" TextWrapping="Wrap" Text="_" VerticalAlignment="Top" />
        <TextBlock HorizontalAlignment="Left" Margin="26,81,0,0" TextWrapping="Wrap" Text="Expires: " VerticalAlignment="Top"/>
        <TextBlock x:Name="_txtExpires" HorizontalAlignment="Left" Margin="126,85,0,0" TextWrapping="Wrap" Text="_" VerticalAlignment="Top" />
        <Button Content="Call Service" HorizontalAlignment="Left" Margin="150,10,0,0" VerticalAlignment="Top" Name="_btnCallService" Click="_btnCallService_Click" />
       
        <ListView x:Name="_listClaims" HorizontalAlignment="Left" Height="377" Margin="26,229,0,0" VerticalAlignment="Top" Width="1315"/>

        

    </Grid>
</Page>
